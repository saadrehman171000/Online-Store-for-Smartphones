generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  price       String
  stock       String
  images      ProductImages[]
  color       String
  brand       Brand           @relation(fields: [brandId], references: [id])
  description String
  brandId     Int
}

model FeaturedProducts {
  id          Int             @id @default(autoincrement())
  name        String
  price       String
  stock       String
  images      ProductImages[]
  color       String
  brand       Brand           @relation(fields: [brandId], references: [id])
  description String
  brandId     Int
}

model ProductImages {
  id                 Int               @id @default(autoincrement())
  url                String
  productId          Int
  product            Product           @relation(fields: [productId], references: [id])
  FeaturedProducts   FeaturedProducts? @relation(fields: [featuredProductsId], references: [id])
  featuredProductsId Int?
}

model Brand {
  id               Int                @id @default(autoincrement())
  brandName        String
  products         Product[]
  FeaturedProducts FeaturedProducts[]
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  date        DateTime @default(now())
}
